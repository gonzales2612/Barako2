<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
}

body {
    background-color: #f5f5f5;
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: white;
    border-bottom: 1px solid #eee;
}

.logo {
    display: flex;
    align-items: center;
    margin-right: 1rem;
}

.logo img {
    width: 50px; /* Adjust size as needed */
    height: 50px; /* Maintain aspect ratio */
}

.logo svg {
    fill: #4a1c1c;
}

.nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
}

.nav-left {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.navlink {
    color: black;
    font-weight: bold;
}

.location-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.location-icon {
    width: 25px;
    height: 25px;
    fill: #1a1a1a;
}

.nav-right {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.button {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    font-size: 0.9rem;
}

.button.primary {
    background-color: #1a1a1a;
    color: white;
    border: none;
    border-radius: 50px;
}

.button.secondary {
    background-color: white;
    color: #1a1a1a;
    border: 1px solid #1a1a1a;
    transition: all 0.2s ease;
    border-radius : 50px;
    font-weight: bold;
    
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.section {
    margin: 2rem 0;
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    border-radius: 8px;
}

.section:nth-child(odd) {
    background-color: #1a1a1a;
    color: white;
}

.section:nth-child(even) {
    background-color: #808080;
    color: white;
}

.section-content {
    flex: 1;
    text-align: center;
}

.image-placeholder {
    background-color: #fff;
    border-radius: 8px;
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
}

.image-icon {
    width: 48px;
    height: 48px;
    opacity: 0.5;
}

@media (max-width: 768px) {
    .section {
        flex-direction: column;
    }
    
    .nav-links {
        display: none;
    }
}

</style>
