<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="styles.css">
    <script>
        // Function to remove the order from the table
        function removeOrder(orderId) {
            if (confirm('Are you sure you want to remove this order?')) {
                window.location.href = '/orders/remove/' + orderId; // Correct URL for order removal
            }
        }
    </script>
</head>
<body>
    <h2>{{title}}</h2>

    <!-- Table to display orders -->
    <table border="1" id="ordersTable">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Order Date</th>
                <th>Menu Items</th>
                <th>Total Amount</th>
                <th>Action</th> <!-- Column for the "Complete" button -->
            </tr>
        </thead>
        <tbody>
            {{#orders}}
            <tr>
                <td>{{OrderId}}</td>
                <td>{{CustomerName}}</td>
                <td>{{OrderDate}}</td>
                <td>{{MenuItemNames}}</td> <!-- Display Menu Item Names -->
                <td>{{TotalAmount}}</td>
                <td>
                    <button onclick="removeOrder({{OrderId}})">Remove</button>
                </td>
            </tr>
            {{/orders}}
        </tbody>
    </table>

    <a href="/menu">Go to Menu</a>
</body>
</html>
